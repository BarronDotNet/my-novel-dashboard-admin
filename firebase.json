{
  "hosting": {
    "site": "my-novel-demo",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      }
    ]
  },
  "functions": {
    "source": ".",
    "ignore": [
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "firbease-debug.log",
      "**/.vscode/**",
      "**/.git/**",
      "**/.next/cache/**",
      "**/node_modules/**",
      "components/**",
      "pages/**",
      "MigrateData/**",
      "README.md"
    ],
    "runtime": "nodejs14"
  }
}